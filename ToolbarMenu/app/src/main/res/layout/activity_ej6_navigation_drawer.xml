<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ej6NavigationDrawerActivity">

    <include android:id="@+id/contenido" layout="@layout/ej6_barra_navegacion"/>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/ventanaNavegacion"
        app:headerLayout="@layout/ej6_cabecera_ventana_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/menu5navigation_view"
        android:layout_gravity="start"/>

</androidx.drawerlayout.widget.DrawerLayout>